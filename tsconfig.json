{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "astro",
    "types": ["astro/client"],
    "allowJs": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  }
}